{
  "name": "figma-developer-tools",
  "version": "1.0.0",
  "description": "Your Figma Plugin",
  "main": "code.js",
  "scripts": {
    "test": "yarn run tsc && yarn run build",
    "format": "prettier --write .",
    "tsc": "yarn run tsc:main && yarn run tsc:ui",
    "tsc:main": "tsc --noEmit -p src/plugin",
    "tsc:ui": "tsc --noEmit -p src/ui",
    "tsc:watch": "concurrently -n widget,iframe \"yarn run tsc:main -- --watch --preserveWatchOutput\" \"yarn run tsc:ui -- --watch --preserveWatchOutput\"",
    "build": "yarn run build:ui && yarn run build:main -- --minify",
    "build:main": "esbuild src/plugin/code.ts --bundle --outfile=dist/code.js",
    "build:ui": "yarn vite build --minify esbuild --emptyOutDir=false",
    "build:watch": "concurrently -n widget,iframe \"yarn run build:main -- --watch\" \"yarn run build:ui -- --watch\"",
    "dev": "PREVIEW_MODE=true concurrently -n tsc,build, vite 'yarn:tsc:watch' 'yarn:build:watch' 'ts-node src/devServer/index.ts'",
    "preview123": "PREVIEW_MODE=false vite",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@figma/plugin-typings": "^1.62.0",
    "@storybook/addon-actions": "^7.0.2",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/addon-interactions": "^7.0.2",
    "@storybook/addon-links": "^7.0.2",
    "@storybook/builder-vite": "^7.0.2",
    "@storybook/react": "^7.0.2",
    "@storybook/testing-library": "^0.1.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "babel-loader": "^8.3.0",
    "concurrently": "^8.0.1",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vite-plugin-singlefile": "^0.13.3",
    "vite-svg-loader": "^4.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0"
  }
}
